generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) // 'cuid()' cria um ID único (como 'clx...')
  email     String   @unique             // Garante que não haja emails duplicados
  username  String?                      // '?' significa que este campo é opcional
  password  String                       // O HASH da senha (do bcrypt) será salvo aqui

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}